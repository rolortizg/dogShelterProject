      </nav>
      <section id="cover">
          <div>
              
          </div>      
    </section>     
       <section>
            <img id="photo" src="{{photoURL}}">
                <form action="/registerShelter">
                    <button type="submit" class="btn btn-warning submit">Become a sheltair!</button>
                </form>
                <section class="barra">
                    <article>
                        <div class="first">
                            <h4>Following</h4>
                            <h3>0</h3>
                        </div>
                        <div class="first">
                            <h4>Followers</h4>
                            <h3>0</h3>
                        </div>
                        <div class="first">
                            <h4>Rescued Dogs</h4>
                            <h3>56</h3>
                        </div>
                        <div>
                            <button id="follow">
                                Follow
                                {{!-- {{text}} --}}
                            </button>
                        </div>
                    </article>
                </section>
                    <div class="header">
                       <h2>{{name}}'s Profile</h2>
                    </div>
                    <div class="bio-area">
                        <h3>Ciudad:</h3>
                        <br />
                        <h3>Edad:</h3>
                        <br />
                        <h3>Animal/es:</h3>
                    </div>
                    <div class="feed">
                       <h1>{{name}}'s Feed</h1>
                       <div></div>
                    </div>
                    

           

            <form id="form" action="/profile" method="POST" enctype="multipart/form-data">
                <input onchange="submitForm()" name="photo" id="file" style="display:none" type="file">
            </form>
       </section>
       

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

