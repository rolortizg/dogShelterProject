<body>
    
      <section class="cover">
        <div class="login-box">
            <p style="color:red">
                {{#if err}}{{err}}{{/if}}
            </p>
            <h1>Log in</h1>
          
            <form action="/login" method="POST">

            <div class="form-row">
              <div class="le form-group col-md-6">
                <label style="margin-left:120px;" for="inputEmail4">Email</label>
                <input  type="email" class="lef form-control" id="inputEmail4" name="email" value="{{email}}" placeholder="Email">
              </div>
                <div class="le form-group col-md-6">
                <label style="margin-left:120px;" for="inputPassword4">Password</label>
                <input type="password" class="ri form-control" id="inputPassword4" name="password" value="{{password}}" placeholder="Password">
              </div>
              
                <button id="submit" type="submit" class="btn btn-warning">Sign in</button>
           
            </form>
              
            <img id="fb" src="https://comedydefensivedriving.com/images2011/fb-sign-in-button.png">
        </div>  
      </section>  
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
