  <link href="https://fonts.googleapis.com/css?family=Open+Sans:600" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=IBM+Plex+Sans+Condensed" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <link href="/stylesheets/registerDog.css" rel="stylesheet">
  <title>Sheltair</title>
</head>
<body>

    


<section class="container">
    <h1 style="margin-top:20px;border-bottom:3px solid black;">Registra tus peludos</h1>    
<form action="/shelterList/{{_id}}/registerDog" method="POST" enctype="multipart/form-data">
  <div class="container1 form-group" style="margin-top:20px;">
    <label for="exampleFormControlInput1">Nombre de tu peludo:</label>
    <input type="text" name="nombre"  class="form-control" id="exampleFormControlInput1" placeholder="nombre" required>
  </div>
  <div class="form-group">
    <label for="exampleFormControlSelect1">La talla de tu perro</label>
    <select class="form-control" name="talla" id="exampleFormControlSelect1">
    <option value="grande">Grande</option>
    <option value="mediana">Mediana</option>
    <option value="chica">Chica</option>
    <option value="mini">Mini</option>
    </select>
  </div>
  <div class="form-group">
    <label for="color">Color de tu perro</label>
    <input type="text" id="color" name="color" placeholder="verde" class="form-control" required>
  </div>
  <div class="form-group">
    <label for="señasParticulares">Señas particulares:</label>
    <input type="text" name="señasParticulares" id="señasParticulares" class="form-control" required>
  </div>
  <div class="form-group">
    <label for="raza">Raza</label>
    <input type="text" name="raza" id="señasParticulares" class="form-control" placeholder="ninguno" required>
  </div>
   <div class="form-group">
    <label for="photo">La foto de tu mascota</label>
    <input type="file" name="foto" id="photo" class="form-control" required>
  </div>

  <button type="submit" class="btn btn-secondary alinear">Registrar</button>
</form>
</section>

</body>
</html>